{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <h1 class="text-primary text-center">Project</h1>

    <div class="col-sm-6 col-sm-offset-3">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ project.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ project.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ project.description }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{% if project.date %}{{ project.date|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ project.username }}</td>
                </tr>
                <tr>
                    <th>Link</th>
                    <td><a href="{{ project.link }}" target="_blank">{{ project.link }}</a></td>
                </tr>
            </tbody>
        </table>
    </div>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('projects_index') }}" class="btn btn-info btn-sm">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('projects_edit', { 'id': project.id }) }}" class="btn btn-warning btn-sm">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger btn-sm">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
