        <input type="submit" value="Edit" class="btn btn-warning" />
    {{ form_end(edit_form) }}
    </div>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('projects_index') }}" class="btn btn-info btn-sm">Back to the list</a>
